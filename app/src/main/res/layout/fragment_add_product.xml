                    android:background="@drawable/custom_edit_text_cut"
                    android:drawableEnd="@drawable/baseline_calendar_month_24"
                    android:gravity="center|start"
                    android:inputType="date"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="@dimen/top_marg_textview"
                    android:layout_marginEnd="@dimen/end_marg_text"
                    android:layout_marginStart="@dimen/start_marg_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_textview"
                    android:text="Expire Date Alarm"
                    android:textColor="@color/edt_top_text_color"
                    />

                <EditText
                    android:id="@+id/exp_date_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_marg_edit"
                    android:layout_marginStart="@dimen/start_marg_edit"
                    android:layout_marginTop="@dimen/top_marg_edit"
                    android:layout_marginEnd="@dimen/end_marg_edit"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint=""
                    android:padding="@dimen/padding_edit"
                    android:importantForAutofill="no"
                    android:textSize="@dimen/text_size_edit"
                    android:drawableEnd="@drawable/baseline_alarm_on_24"
                    android:gravity="center|start"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                   />


                <RadioGroup

                    android:id="@+id/sel_non_gov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/gov_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Gov-Authorized" />

                    <RadioButton
                        android:id="@+id/gov_non_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Non Gov-Authorized" />



                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="@dimen/top_marg_textview"
                        android:layout_marginEnd="@dimen/end_marg_text"
                        android:layout_marginStart="@dimen/start_marg_text"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_textview"
                        android:text="@string/upload_images"
                       />


                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"

                        android:src="@drawable/cloud_computing">

                    </ImageView>

                    <LinearLayout
                        android:id="@+id/imageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_set"
                        android:layout_width="190dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/no_image"
                        android:visibility="gone">

                    </ImageView>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recy_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:layoutManager="LinearLayoutManager" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twenty_five"
                        android:layout_marginTop="@dimen/ten"
                        android:fontFamily="@font/sf_compact_regular"
                        android:text="@string/upload_Product_Video"
                        android:textSize="@dimen/fifteen" />

                    <ImageView
                        android:id="@+id/video"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/cloud_computing" />

                    <VideoView
                        android:id="@+id/simpleVideoView"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/video_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twenty_five"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/sf_compact_regular"
                        android:lines="1"
                        android:text=""
                        android:textSize="@dimen/fifteen" />
                </LinearLayout>

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="center"
                    android:padding="@dimen/ten"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>