<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:weightSum="3"
                    android:background="@drawable/back_images"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:id="@+id/backBtn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start|center"
                        android:background="@drawable/baseline_arrow_back_24">
                    </ImageView>
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="50dp"
                        android:id="@+id/titleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Update Warehouse"
                        android:textColor="@color/white" />


                </LinearLayout>

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="@dimen/top_marg_text"
                    android:layout_marginEnd="@dimen/end_marg_text"
                    android:layout_marginStart="@dimen/start_marg_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_text"
                    android:text="Code"
                    android:textColor="@color/edt_top_text_color"
                    />

                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawableEnd="@drawable/baseline_account_circle_24"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint=""
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/company_lay"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="@dimen/top_marg_text"
                        android:layout_marginEnd="@dimen/end_marg_text"
                        android:layout_marginStart="@dimen/start_marg_text"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_text"
                        android:text="Select Company"
                        android:textColor="@color/edt_top_text_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twenty_five"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/twenty_five"
                        android:background="@drawable/custom_edit_text_cut">

                        <Spinner
                            android:id="@+id/comp_Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/vendor_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="@dimen/top_marg_text"
                    android:layout_marginEnd="@dimen/end_marg_text"
                    android:layout_marginStart="@dimen/start_marg_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_text"
                    android:text="Company Name"
                    android:textColor="@color/edt_top_text_color" />
                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawableEnd="@drawable/baseline_account_circle_24"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:textSize="14dp"
                    android:padding="8dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="@dimen/top_marg_text"
                    android:layout_marginEnd="@dimen/end_marg_text"
                    android:layout_marginStart="@dimen/start_marg_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_text"
                    android:text="Village/Address"
                    android:textColor="@color/edt_top_text_color" />
                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/address_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawableEnd="@drawable/baseline_account_circle_24"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:textSize="14dp"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="center"
                    android:padding="@dimen/ten"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="#ffff"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>