<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:weightSum="3"
                    android:background="@drawable/back_images"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:id="@+id/backBtn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start|center"
                        android:background="@drawable/baseline_arrow_back_24">
                    </ImageView>
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="50dp"
                        android:id="@+id/titleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Ware House"
                        android:textColor="@color/white" />


                </LinearLayout>

                <EditText
                    android:id="@+id/et_warehouse"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawableEnd="@drawable/baseline_home_work_24"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Ware House Name"
                    android:importantForAutofill="no"
                    android:textSize="14dp"
                    android:inputType="text"
                    android:padding="8dp"
                    android:requiresFadingEdge="vertical" />

                <EditText
                    android:id="@+id/customer_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_regular"
                    android:hint="Customer Type"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="@dimen/ten"
                    android:paddingEnd="@dimen/ten"
                    android:visibility="gone" />







                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/fifty"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/sf_compact_regular"
                    android:gravity="center"
                    android:nextFocusUp="@+id/tv_register"
                    android:padding="@dimen/ten"
                    android:textSize="16sp"
                    android:text="Submit"
                    android:textColor="#ffff"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>