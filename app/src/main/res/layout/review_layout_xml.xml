<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_layout_xml"
    android:background="#fff"
    android:layout_marginTop="15dp"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/five"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:padding="@dimen/five"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neue_medium"
            android:text="Rating And Reviews :"
            android:textColor="#191919"
            android:textSize="18sp" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/newest"
            android:layout_width="0dp"
            android:gravity="end|center"
            android:layout_weight=".6"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neue_medium"
            android:drawableEnd="@drawable/baseline_expand_more_24"
            android:text="Newest   "
            android:textStyle="normal"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:background="@drawable/review_back"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="110dp">


        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="140dp"
            android:fontFamily="@font/helvetica_neue_medium"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4.1"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="3dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center|left"
                    android:text="Excellent "
                    android:textColor="#C3626262"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>

                <ProgressBar
                    android:id="@+id/progress_5"
                    android:layout_gravity="end|center"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:progressTint="#4ED336"
                    android:layout_marginLeft="5dp"
                    android:layout_height="5dp"
                    android:progressDrawable="@drawable/xml_progress_bar_line"
                    android:layout_toRightOf="@+id/rating_5"
                    />
            </LinearLayout>

            <LinearLayout
                android:padding="3dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:text="Very Good"
                    android:textColor="#C3626262"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>

                <ProgressBar
                    android:layout_gravity="end|center"
                    android:id="@+id/progress_4"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:progressTint="#3CC5BE"
                    android:layout_height="5dp"
                    android:progressDrawable="@drawable/xml_progress_bar_line"
                    android:layout_below="@+id/rating_5"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="50" />
            </LinearLayout>
            <LinearLayout
                android:padding="3dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:text="Average"
                    android:textColor="#C3626262"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>

                <ProgressBar
                    android:id="@+id/progress_3"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:progressTint="#F2AE2E"
                    android:layout_gravity="end|center"
                    android:layout_height="5dp"
                    android:progressDrawable="@drawable/xml_progress_bar_line"                    android:layout_below="@+id/rating_4"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="30" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="20dp"
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Poor"
                    android:textColor="#C3626262"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>

                <ProgressBar
                    android:layout_gravity="end|center"
                    android:id="@+id/progress_2"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:progressTint="#BF213E"
                    android:layout_height="5dp"
                    android:progressDrawable="@drawable/xml_progress_bar_line"                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="20" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!--    cardview-->
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_Image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/profile">

            </ImageView>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Chandra kant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:textColor="#444444"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </ImageView>
                    <ImageView
                        android:src="@drawable/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </ImageView>
                    <ImageView
                        android:src="@drawable/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <ImageView
                        android:src="@drawable/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <ImageView
                        android:src="@drawable/star_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  4.0 ">

                    </TextView>
                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="  20 Mar 2020"
                        android:textSize="12sp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_compact_medium"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:layout_marginLeft="2dp"
                        android:text="1 Pac = 25Pcs"
                        android:textSize="16sp" />


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indeed, the best service and fresh plants at very reasonable prices. I am happy ordering my plans from Grow it Bro and my plans are also growing very well.ðŸ‘"
            android:maxLines="5"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#E4626262"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rating_lay"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:text="Customer Rating "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_rag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>