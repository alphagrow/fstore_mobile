<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/profile">

        </ImageView>

        <LinearLayout
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="180dp"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#E6171717"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/customer_text"
                    android:gravity="center"
                    android:layout_marginEnd="2dp"
                    android:text=""
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:background="@drawable/customer_back_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobileNoTextView"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneuelight"
                    android:textStyle="bold"
                    android:textColor="#F2626262"
                    android:text=" "
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginEnd="2dp"
                    android:id="@+id/bill"
                    android:gravity="end"
                    android:text="Last Bill -"
                    android:fontFamily="@font/helveticaneuelight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2626262"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>