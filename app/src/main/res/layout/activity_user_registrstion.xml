<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:weightSum="3"
                    android:background="@drawable/back_images"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:id="@+id/backBtn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start|center"
                        android:background="@drawable/baseline_arrow_back_24">
                    </ImageView>
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="50dp"
                        android:id="@+id/titleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text=""
                        android:textColor="@color/white" />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="User Details"
                    android:textColor="#A4000000" />


                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="User Name"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />
                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/ed_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="User Id"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    app:passwordToggleDrawable="@drawable/show_password_selector"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeWidth="0dp"
                    app:passwordToggleTint="@color/black_overlay">

                    <EditText
                        android:layout_height="60dp"
                        android:id="@+id/et_password"
                        android:textColorHint="@color/dark_grey"
                        android:hint="@string/user_password"
                        android:drawablePadding="@dimen/ten"
                        android:layout_width="match_parent"
                        android:background="@drawable/custom_edit_text_cut"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:inputType="textPassword"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:textColor="@color/black_overlay" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Company Details"
                    android:textColor="#A4000000" />
                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Company Name"
                    android:inputType="textEmailAddress"
                    android:textSize="14dp"
                    android:padding="8dp" />

                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Mobile"
                    android:maxLength="10"
                    android:inputType="number"
                    android:textSize="14dp"
                    android:padding="8dp" />
                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Phone"
                    android:maxLength="10"
                    android:inputType="number"
                    android:textSize="14dp"
                    android:padding="8dp" />

                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/et_useremail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:textSize="14dp"
                    android:padding="8dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty_five"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/twenty_five"
                    android:background="@drawable/custom_edit_text_cut">

                    <Spinner
                        android:id="@+id/stateSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:padding="5dp" />
                </LinearLayout>


<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="52dp"-->
<!--                    android:layout_marginStart="@dimen/twenty_five"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:layout_marginEnd="@dimen/twenty_five"-->
<!--                    android:background="@drawable/custom_edit_text_cut">-->

<!--                    <Spinner-->
<!--                        android:id="@+id/citySpinner"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:padding="5dp" />-->
<!--                </LinearLayout>-->


<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="52dp"-->
<!--                    android:layout_marginStart="@dimen/twenty_five"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:layout_marginEnd="@dimen/twenty_five"-->
