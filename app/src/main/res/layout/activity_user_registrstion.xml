<!--                        android:id="@+id/talukaSpinner"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="52dp"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:padding="5dp" />-->
<!--                </LinearLayout>-->


                <EditText
                    android:id="@+id/et_useraddress"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Address"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />
                <EditText
                    android:id="@+id/et_city"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="City"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />


                <EditText
                    android:id="@+id/et_pincode"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="@string/pincode"
                    android:inputType="number"
                    android:textSize="14dp"
                    android:maxLength="6"
                    android:padding="8dp" />


                <EditText
                    android:id="@+id/et_gst_no"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="GST "
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />


                <EditText
                    android:id="@+id/et_website"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Website "
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />
                <EditText
                    android:id="@+id/et_insect_lic_no"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Insect Lic no "
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />
                <EditText
                    android:id="@+id/et_fert_lic_no"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Fert Lic no"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />
                <EditText
                    android:id="@+id/et_seed_lic_no"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edit_text_cut"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/sf_compact_medium"
                    android:hint="Seed Lic No"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="center"
                    android:padding="@dimen/ten"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="#ffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/fifty"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/sf_compact_regular"
                    android:gravity="center"
                    android:nextFocusUp="@+id/tv_register"
                    android:padding="@dimen/ten"
                    android:textSize="16sp"
                    android:text="Submit"
                    android:textColor="#ffff"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>