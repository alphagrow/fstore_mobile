                                android:layout_marginRight="15dp"
                                android:orientation="horizontal"
                                android:padding="7dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneuelight"
                                    android:layout_weight="1"
