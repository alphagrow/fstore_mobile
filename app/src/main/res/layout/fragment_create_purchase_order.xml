                                    android:layout_weight="1"
                                    android:fontFamily="@font/helvetica_neue_medium"
                                    android:textColor="#E9171717"
                                    android:gravity="end"
                                    android:textSize="16sp"
                                    android:textStyle="normal"/>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="#E6E4E4E4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="horizontal"
                                android:padding="7dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneuelight"
                                    android:layout_weight="1"
                                    android:textColor="#E1626262"
                                    android:textStyle="bold"
                                    android:text="Total Amount"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/amountTxt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/helvetica_neue_medium"
                                    android:textColor="#E9171717"
                                    android:gravity="end"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="horizontal"
                                android:padding="7dp"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/text_taxes"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneuelight"
                                    android:layout_weight="1"
                                    android:textColor="#E1626262"
                                    android:textStyle="bold"
                                    android:text="taxes"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txt_amount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/helvetica_neue_medium"
                                    android:textColor="#E9171717"
                                    android:gravity="end"
                                    android:textSize="16sp"
                                    android:textStyle="normal"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="horizontal"
                                android:padding="7dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneuelight"
                                    android:layout_weight="1"
                                    android:textColor="#E1626262"
                                    android:textStyle="bold"
                                    android:text="Paid Amount"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/pay_amount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/helvetica_neue_medium"
                                    android:textColor="#E9171717"
                                    android:gravity="end"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <Button
                                android:id="@+id/orderBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/button"
                                android:fontFamily="@font/sf_compact_regular"
                                android:gravity="center"
                                android:nextFocusUp="@+id/tv_register"
                                android:textStyle="bold"
                                android:text="Purchase Order"
                                android:textColor="#ffff"
                                android:textSize="14dp" />

                        </LinearLayout>








                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
