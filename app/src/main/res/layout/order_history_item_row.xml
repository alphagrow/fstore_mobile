<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/images"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/no_image">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="2dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#E4171717"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/baseline_chevron_right_24">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="4dp">

                <TextView
                    android:id="@+id/amountTxt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="start|center"
                    android:text=""
                    android:textColor="#B3171717"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:padding="1dp"
                    android:id="@+id/case_id"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/case_back_color"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text="   CASH  "
                    android:textStyle="bold"
                    android:textColor="@color/cust_fre_back_color_text"
                    android:textSize="11sp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="2dp">

<!--                <LinearLayout-->
<!--                    android:weightSum="2"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="1.5"-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_height="wrap_content">-->
                    <TextView
                        android:id="@+id/order_no"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_compact_regular"
                        android:gravity="start|center"
                        android:text=""
                        android:maxLines="1"
                        android:textColor="#C8626262"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dateTxt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/sf_compact_regular"
                        android:gravity="end"
                        android:textColor="#BF626262"
                        android:maxLines="1"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="13sp" />

<!--                </LinearLayout>-->

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:fontFamily="@font/sf_compact_regular"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#BF626262"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>