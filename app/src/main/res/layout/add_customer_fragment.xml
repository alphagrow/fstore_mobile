                android:layout_marginStart="@dimen/twenty_five"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="@dimen/twenty_five"
                android:background="@drawable/custom_edit_text_cut">

                <Spinner
                    android:id="@+id/stateSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:padding="5dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_textview"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="District"
                android:textColor="@color/edt_top_text_color"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="@dimen/twenty_five"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="@dimen/twenty_five"
                android:background="@drawable/custom_edit_text_cut">

                <Spinner
                    android:id="@+id/citySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/state_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_textview"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="Taluka"
                android:textColor="@color/edt_top_text_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="@dimen/twenty_five"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="@dimen/twenty_five"
                android:background="@drawable/custom_edit_text_cut">

                <Spinner
                    android:id="@+id/talukaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_textview"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="@string/address"
                android:textColor="@color/edt_top_text_color"
                />

            <EditText
                android:id="@+id/et_useraddress"
                android:importantForAutofill="no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="25dp"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="25dp"
                android:background="@drawable/custom_edit_text_cut"
                android:drawableEnd="@drawable/baseline_home_work_24"
                android:drawablePadding="@dimen/ten"
                android:fontFamily="@font/sf_compact_medium"
                android:hint=""
                android:inputType="text"
                android:textSize="@dimen/text_size_edit"
                android:padding="@dimen/padding_edit" />

