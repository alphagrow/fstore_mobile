            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_text"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="GST No."
                android:textColor="@color/edt_top_text_color"
                />
            <EditText
                android:id="@+id/gst_edit"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/gst_no"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="@dimen/twenty_five"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="@dimen/twenty_five"
                android:background="@drawable/custom_edit_text_cut"
                android:drawablePadding="@dimen/ten"
                android:fontFamily="@font/sf_compact_medium"
                android:hint=""
                android:importantForAutofill="no"
                android:textSize="@dimen/text_size_edit"
                android:padding="@dimen/padding_edit"
                android:requiresFadingEdge="vertical"/>
            <TextView
                android:id="@+id/land_size_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_text"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="Land Size in(acre)"
                android:textColor="@color/edt_top_text_color"
                />

            <EditText
                android:id="@+id/land_size"
                android:hint=""
                android:importantForAutofill="no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="@dimen/twenty_five"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="@dimen/twenty_five"
                android:requiresFadingEdge="vertical"
                android:background="@drawable/custom_edit_text_cut"
                android:drawableEnd="@drawable/land_size"
                android:drawablePadding="@dimen/ten"
                android:textSize="@dimen/text_size_edit"
