                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_textview"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="@string/pincode"
                android:textColor="@color/edt_top_text_color"
                />

            <EditText
                android:id="@+id/et_pincode"
                android:importantForAutofill="no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="25dp"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="25dp"
                android:background="@drawable/custom_edit_text_cut"
                android:drawableEnd="@drawable/baseline_person_pin_circle_24"
                android:drawablePadding="@dimen/ten"
                android:fontFamily="@font/sf_compact_medium"
                android:hint=""
                android:inputType="number"
                android:textSize="@dimen/text_size_edit"
                android:padding="@dimen/padding_edit"
                android:maxLength="6"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/top_marg_textview"
                android:layout_marginEnd="@dimen/end_marg_text"
                android:layout_marginStart="@dimen/start_marg_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_textview"
                android:text="@string/email"
                android:textColor="@color/edt_top_text_color"
                />

            <EditText
                android:importantForAutofill="no"
                android:id="@+id/et_useremail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_marg_edit"
                android:layout_marginStart="25dp"
                android:layout_marginTop="@dimen/top_marg_edit"
                android:layout_marginEnd="25dp"
                android:background="@drawable/custom_edit_text_cut"
                android:drawableEnd="@drawable/baseline_mail_24"
                android:drawablePadding="@dimen/ten"
                android:fontFamily="@font/sf_compact_medium"
                android:hint=""
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_edit"
                android:padding="@dimen/padding_edit"/>

            <TextView
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="@dimen/fifty"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button"
                android:fontFamily="@font/sf_compact_regular"
                android:gravity="center"
                android:nextFocusUp="@+id/tv_register"
                android:padding="@dimen/ten"
                android:textSize="16sp"
                android:text="Submit"
                android:textColor="#ffff"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
