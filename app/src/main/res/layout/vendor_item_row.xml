<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Ravi Shankar"
                    android:maxLines="2"
                    android:textColor="#E8171717"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/mobile"
                    android:gravity="start"
                    android:layout_gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_compact_medium"
                    android:text=" "
                    android:textStyle="normal"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:weightSum="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/status"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#D3008000"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text=" "
                    android:textSize="16sp"
                    android:textStyle="bold" />
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="3dp"
                    android:padding="@dimen/five"
                    android:id="@+id/update"
                    android:layout_width="30dp"
                    android:layout_gravity="end|center"
                    android:layout_height="30dp"
                    android:background="@drawable/updated" />
    <ImageView
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="3dp"
        android:padding="@dimen/five"
        android:visibility="gone"
        android:id="@+id/acti_img"
        android:layout_width="30dp"
        android:layout_gravity="end|center"
        android:layout_height="30dp"
        android:background="@drawable/active"/>
    <ImageView
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="3dp"
        android:padding="@dimen/five"
        android:id="@+id/acti_img_2"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_gravity="end|center"
        android:layout_height="30dp"
        android:background="@drawable/inactive"/>


</LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>