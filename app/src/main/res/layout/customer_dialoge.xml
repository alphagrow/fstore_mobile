<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:visibility="visible"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/farmerRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Farmer" />

            <RadioButton
                android:id="@+id/frenchRadioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Franchise" />

            <RadioButton
                android:id="@+id/dealerRadioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dealer" />
        </RadioGroup>

        <TextView
            android:id="@+id/text_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/ten"
            android:fontFamily="@font/sf_compact_regular"
            android:gravity="start"
            android:text="Customer List"
            android:textSize="@dimen/fifteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_back">
            <Spinner
                android:id="@+id/cstSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/ten"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <Button
                android:id="@+id/ok_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="OK"
                android:textColor="@color/white"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>