<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
       android:scrollbars="vertical"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:weightSum="3"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/baseline_arrow_back_24">
                </ImageView>


            </LinearLayout>

            <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:background="@drawable/bashborad_logo"
                android:visibility="visible" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Contact Us"
                android:textColor="@color/white"
                android:textSize="22sp">

            </TextView>


        </LinearLayout>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/gmail">
            </ImageView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="3"
                android:text="   info@thegrowit.com \n   support@thegrowit.com"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customer_service_agent">

            </ImageView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="(1800) 8896-978 (Call us 24/7)"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp">

            </TextView>
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/placeholder">

            </ImageView>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="606A, Union Heights,\n Near Rahul Raj Mall,\n Vesu, Surat, Gujarat 395007"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>

</androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>