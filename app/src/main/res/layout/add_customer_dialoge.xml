<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/ten"
            android:fontFamily="@font/sf_compact_regular"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Customer Type"
            android:textSize="20sp" />
        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/ten"
            android:fontFamily="@font/sf_compact_regular"
            android:gravity="start"
            android:text="Name"
            android:textSize="@dimen/fifteen" />

        <EditText
            android:id="@+id/name_ed_text"
            android:hint=" "
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/twenty_five"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/twenty_five"
            android:requiresFadingEdge="vertical"
            android:background="@drawable/custom_edit_text_cut"
            android:drawablePadding="@dimen/ten"
            android:textSize="14dp"
            android:fontFamily="@font/sf_compact_medium"
            android:inputType="text"
            android:padding="8dp" />
        <TextView
            android:id="@+id/percentage_text"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/ten"
            android:fontFamily="@font/sf_compact_regular"
            android:gravity="start"
            android:text="Percentage"
            android:textSize="@dimen/fifteen" />

        <EditText
            android:id="@+id/per_ed_text"
            android:hint=" "
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/twenty_five"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/twenty_five"
            android:requiresFadingEdge="vertical"
            android:background="@drawable/custom_edit_text_cut"
            android:drawablePadding="@dimen/ten"
            android:textSize="14dp"
            android:fontFamily="@font/sf_compact_medium"
            android:inputType="number"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/ten"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <Button
                android:id="@+id/ok_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>