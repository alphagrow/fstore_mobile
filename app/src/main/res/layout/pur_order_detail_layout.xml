<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/product_Image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/no_image">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:weightSum="2"
                    android:orientation="vertical">


                    <com.skyhope.showmoretextview.ShowMoreTextView
                        android:padding="4dp"
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:maxLines="2"
                        android:textColor="#171717"
                        android:textSize="16sp"
                        android:textStyle="normal"  />
                    <TextView
                        android:padding="1dp"
                        android:id="@+id/crop_text"
                        android:layout_marginLeft="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:maxLines="1"
                        android:textColor="#D5171717"
                        android:textSize="13sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight=".8"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="end"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pac_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/helveticaneuelight"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:text="1 Pac = 25Pcs"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:padding="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/qut_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneuelight"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:textColor="#E6626262"
                    android:text="Qty : "
                    android:textStyle="bold"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Received : "
                    android:textSize="14sp">
                </TextView>

                <EditText
                    android:id="@+id/edi_qut_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"

                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text_cut"
                    android:inputType="number"
                    android:text="0.0">
                </EditText>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="#E6E4E4E4" />

</LinearLayout>