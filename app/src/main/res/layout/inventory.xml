<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginTop="7dp"-->
<!--        android:background="#81959191">-->

<!--    </View>-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/inventory_menu_lay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="17dp"
            android:background="@drawable/stock"
            android:layout_width="@dimen/width_icon"
            android:layout_height="@dimen/height_icon">

        </ImageView>
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sf_compact_medium"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text=" Inventory  "
            />
        <ImageView
            android:id="@+id/inv_menu_image_end"
            android:src="@drawable/baseline_expand_more_24"
            android:layout_gravity="start|center"
            android:layout_marginLeft="2dp"
            android:layout_width="16dp"
            android:layout_height="16dp">

        </ImageView>
    </LinearLayout>


    <TextView
        android:id="@+id/inventory_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/sf_compact_medium"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_start_marg_text"
        android:text="Stock Details "
        />

    <TextView
        android:id="@+id/transfer"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/sf_compact_medium"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_start_marg_text"
        android:text="Transfer "
        />
    <TextView
        android:id="@+id/transfer_order_list"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/sf_compact_medium"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_start_marg_text"
        android:text="Transfer Order List "
        />
    <TextView
        android:id="@+id/warehouses"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/sf_compact_medium"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_start_marg_text"
        android:text="Warehouses "
        />



</LinearLayout>